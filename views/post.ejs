<%- include('partials/header') -%>

<div class="container">
   <div class="row justify-content-center mt-5">
      <div class="col-6">
         <h2><%= post.title %></h2>
         <img class="img-fluid" src="<%= post.image %>" alt="">
         <div class="row justify-content-center">
            <form class="col-1"  method="POST" action="post/likePost/<%= post.id%>?_method=PUT">
               <button class="btn btn-primary fa fa-heart" type="submit"></button>
            </form>
            <h3 class="col-3">Likes: <%= post.likes%></h3>
            <% if(post.user == user.id){ %>
               <form action="post/deletePost/<%=post.id%>?_method=DELETE" method="POST" class="col-3">
                  <button class="btn btn-primary fa fa-trash" type="submit"></button>
               </form>
            <% } %>
         </div>
      </div>
      <div class="col-3 mt-5">
         <p><%= post.caption %></p>
      </div>
      <div class="col-6 my-5">
         <a href="/profile" class="btn btn-primary">Return to Profile</a>
         <a href="/feed" class="btn btn-primary">Return to Feed</a>
      </div>
   </div>
</div>

<%- include('partials/footer') -%>